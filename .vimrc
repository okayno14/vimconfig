set nocompatible

" column width
set textwidth=80
set colorcolumn=80

" tabs
set autoindent
set smartindent
" press <tab>
" use :retab for replacing \t to <space> * tabstop
set smarttab
set tabstop=4
" using < or >
set expandtab
set shiftwidth=4

" registers
set clipboard=unnamed,unnamedplus

" view
set number
syntax on
filetype on

