let g:mapleader = ","

map <leader>s :%s:\<\>:
map <leader>f :lgrep '\b\b':lopenp

" [l]ocation list
map ]l :lne
map [l :lp

" [c]uickfix
map ]c :cn
map [c :cp

" [b]uffer
map ]b :bn
map [b :bp

" open buffer list and select some
nnoremap <Leader>b :ls t<CR>:b<Space>

" start of line
:cnoremap <C-A>		<Home>
" back one character
:cnoremap <C-B>		<Left>
" delete character under cursor
:cnoremap <C-D>		<Del>
" end of line
:cnoremap <C-E>		<End>
" forward one character
:cnoremap <C-F>		<Right>
" recall newer command-line
:cnoremap <C-N>		<Down>
" recall previous (older) command-line
:cnoremap <C-P>		<Up>
" back one word (<A-F>)
:cnoremap f       	<S-Right>
" forward one word (<A-B>)
:cnoremap b	        <S-Left>

